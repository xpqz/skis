{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SKIS",
  "version": "0.1.0",
  "identifier": "com.skis.issue-tracker",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SKIS",
        "width": 900,
        "height": 650,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
